    <div class="topbar">
      <div class="topbar-inner">
        <div class="container">
          <%= link_to image_tag("logo-top.png")+" Operation Paws for Homes" , root_path, :class => "brand" %>
          <ul class="nav">
			<li><%= link_to "Adopt", new_adopter_path %></li>
			<li><%= link_to "Dogs", dogs_path %></li>
			<li><%= link_to "About us", '#' %></li>
			<% if signed_in? %>
			<li><%= link_to "Applications", adopters_path %>
			<li><%= link_to "Staff", users_path %></li>
			<li><%= link_to "My Profile", current_user %></li>
			<% end %>
			<% if signed_in? %>
			<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
			<% else %>
			<li><%= link_to "Sign in", signin_path %></li>
			<% end %>
          </ul>
        </div>
      </div>
    </div>