<div class='container' id='manage_profile'>
  <div class="row title_row">
    <div class='col-10'>
      <h1>#<%=@dog.tracking_id%> <%= @dog.name %>:</h1>
      <span><%= @dog.size.titleize %>-size,</span>
      <span><%= @dog.gender %>,</span>
      <span class='age'><%= @dog.age ? @dog.age.titleize : " " %></span>
      <span class='breed'><%= @dog.breeds.join(" x ").html_safe %></span>,
      <span class='status'><%= @dog.status.titleize %></span >
    </div>
    <div class='col-2'>
      <%= link_to "Public profile", dogs_gallery_path(@dog), class: 'switch_view' %>
    </div>
  </div>
  <div class="row profile line-1">
    <div class="col-8">
      <%= some_details %>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <div id="galleria"></div>
      <div id="dogDescription" class="well">
        <p> <%= simple_format(@dog.description) %></p>
      </div>

      <%= render partial: 'medical_summary' %>
    </div>

    <div class="col-4">
      <div class='row'>
        <div class='col-10'>
          About <%= @dog.name.titleize %>
        </div>
        <div class='col-2'>
          <% if can_edit_dogs? || fostering_dog? %>
            <%= link_to "Edit", edit_dog_path(@dog), id: 'edit_dog'  %>
          <% end %>
        </div>
      </div>
      <dl class='row' id='details'>
        <dt>Original Name</dt>
        <dd><%= @dog.original_name || 'unknown' %></dd>
        <dt>Microchip</dt>
        <dd><%= @dog.microchip || 'unknown' %></dd>
        <dt>Adoption Fee</dt>
        <dd><%= number_to_currency(@dog.fee, precision: 0) || 'unknown' %></dd>
        <dt>Medical Review Complete</dt>
        <dd><%= @dog.medical_review_complete.as_icon %></dd>
        <dt>Has Medical Need</dt>
        <dd><%= @dog.has_medical_need.as_icon %></dd>
        <dt>Needs Spay or Neuter</dt>
        <dd><%= (!@dog.is_altered).as_icon %></dd>
        <dt>High Priority</dt>
        <dd><%= @dog.is_high_priority.as_icon %></dd>
        <dt>Needs Photos</dt>
        <dd><%= @dog.needs_photos.as_icon %></dd>
        <dt>Has Behavior Problem</dt>
        <dd><%= @dog.has_behavior_problem.as_icon %></dd>
        <dt>Needs Foster</dt>
        <dd><%= @dog.is_high_priority.as_icon %></dd>
        <dt>Foster</dt>
        <dd><%= render partial: 'foster_details' %></dd>
        <dt>Adoption Coordinator</dt>
        <dd><%= render partial: 'adoption_coordinator' %></dd>
        <dt>Source Shelter</dt>
        <dd><%= @dog.shelter&.name || 'unknown' %></dd>
        <dt>Adopters</dt>
        <dd><%= render(partial: 'adopter', collection: @dog.adopters) || "no adopters" %></dd>
        <dt>Available on</dt>
        <dd><%= @dog.available_on_dt || 'unknown' %></dd>
        <dt>Intake date</dt>
        <dd><%= @dog.intake_dt || 'unknown' %></dd>
        <dt>Adopted on</dt>
        <dd><%= @dog.adoption_date || 'unknown' %></dd>
        <dt>Adoptapet ad</dt>
        <dd><%= @adoptapet %></dd>
        <dt>Petfinder ad</dt>
        <dd><a href="https://www.petfinder.com/pet-search?shelter_id=VA600">Petfinder</a></dd>
      </dl>
      <div class='row'>
        </div>
          <!--<%= render partial: 'private_information' %> -->
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  $('#galleria').galleria({
    responsive: true,
    imageCrop: false,
    dataSource: <%= @carousel %>
  });

  $(function () {
    $('[data-toggle="popover"]').popover()
  })

  $('.popover-dismiss').popover({
    trigger: 'focus'
  })
</script>
