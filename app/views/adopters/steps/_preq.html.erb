	<div class="step" id="first">
			<div class="clearfix">
			<label id="optionsCheckboxes">Check all that apply</label>
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<%= f.check_box :pre_q_age, :class => "required" %>
								<span>I am at least 21 years old or have a co-signer over the age of 21.</span>
							</label>
							<span for="adopter[pre_q_age]" generated="true" class="help-inline error"></span>
						</li>
						<li>
							<label>
								<%= f.check_box :pre_q_commited, :class => "required" %>
								<span>Everyone in my household is commited to adopoting a new family member.</span>		
							</label>
							<span for="adopter[pre_q_commited]" generated="true" class="help-inline error"></span>
						</li>
						<li>
							<label>
								<%= f.check_box :pre_q_costs, :class => "required" %>
								<span>I have reviewed the <a href='http://www.ophrescue.org/page2.php' target= '_blank'>costs of adopting</a>.</span>
							</label>
							<span for="adopter[pre_q_costs]" generated="true" class="help-inline error"></span>
						</li>
						<li>
							<label>
								<%= f.check_box :pre_q_meds, :class => "required" %>
								<span>All my current pets are up to date on all shots and are spayed/neutered (age appropriate). </span>	
							</label>
							<span for="adopter[pre_q_meds]" generated="true" class="help-inline error"></span>
						</li>
						<li>
							<label>
								<%= f.check_box :pre_q_surrender, :class => "required" %>
								<span>In the event I am unable to keep the dog, I will contact OPH to assist in rehoming or returning to dog to the rescue.</span>
							</label>
							<span for="adopter[pre_q_surrender]" generated="true" class="help-inline error"></span>
						</li>
						<li>
							<label>
								<%= f.check_box :pre_q_abuse, :class => "required" %>
								<span>I have never been convicted of animal abuse.</span>
							</label>
							<span for="adopter[pre_q_abuse]" generated="true" class="help-inline error"></span>
						</li>
					</ul>
				</div>
			</div>
	</div>