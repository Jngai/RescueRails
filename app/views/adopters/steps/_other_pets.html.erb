<div id="other_pets" class="step">
		<div class="clearfix">
			<%= af.label :current_pets, "Please identify any current pets(name, age, breed)" %>
			<div class="input">
				<%= af.text_area :current_pets, :class => "xxlarge", :rows => "3" %>
			</div>
		</div>
		<div class="clearfix">
			<%= af.label :had_pets, "Are all your dogs/cats spayed/neutered?" %>
			<div class="input">
				<ul class="inputs-list">
					<li>
						<label>
							<%= af.radio_button :current_pets_fixed, "Yes" %>
							<span>Yes</span>
						</label>
					</li>
					<li>
						<label>
							<%= af.radio_button :current_pets_fixed, "No" %>
							<span>No</span>
						</label>
					</li>
				</ul>
			</div>
		</div>
		<div class="clearfix">
			<%= af.label :why_not_fixed, "If no, please explain why." %>
			<div class="input">
				<%= af.text_area :why_not_fixed, :class => "xxlarge", :rows => "3"%>
			</div>
		</div>
		<div class="clearfix">
			<%= af.label :current_pets_uptodate, "Are all your pets up to date on routine vaccines?" %>
			<div class="input">
				<ul class="inputs-list">
					<li>
						<label>
							<%= af.radio_button :current_pets_uptodate, true %>
							<span>Yes</span>
						</label>
					</li>
					<li>
						<label>
							<%= af.radio_button :current_pets_uptodate, false %>
							<span>No</span>
						</label>
					</li>
				</ul>
			</div>
		</div>
		<div class="clearfix">
			<%= af.label :current_pets_uptodate_why, "If no, please explain why." %>
			<div class="input">
				<%= af.text_area :current_pets_uptodate_why, :class => "xxlarge", :rows => "3" %>
			</div>
		</div>
		<div class="clearfix">
			<%= af.label :prior_pets, "Please identify any other pets you have had in the past 10 years, and why they are no longer with you." %>
				<div class="input">
					<%= af.text_area :prior_pets, :class => "xxlarge", :rows => "3" %>
				</div>
		</div>
		<h5>Please provide the name and number of a veterinarian who has seen these pets.</h5>
		
		<div class="clearfix">
			<%= af.label :vet_name, "Veterinarian Name" %>
			<div class="input">
				<%= af.text_field :vet_name %>
			</div>
		</div>
		<div class="clearfix">
			<%= af.label :vet_phone, "Veterinarian Phone" %>
			<div class="input">
				<%= af.text_field :vet_phone %>
			</div>
		</div>
		<p>Call your vet and  give permission to release your pet records to Operation Paws for Homes.</p>
</div>