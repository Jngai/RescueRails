<div id="other_pets" class="step">
    <div class="control-group">
      <%= af.label :current_pets, "Please list all dogs or cats you have owned over the past 10 years and where they are now.  Also include pets that live in your home but don't belong to you (Roommate's dog, etc).", :class => "control-label" %>
      <div class="controls">
        <%= af.text_area :current_pets, :class => "input-xxlarge", :rows => "3" %>
        <span class="help-inline">Include name, age and breed</span>
      </div>
    </div>
    <div class="control-group">
      <%= af.label :had_pets, "Are all your dogs/cats spayed/neutered?", :class => "control-label" %>
      <div class="controls">
        <label class="radio">
          <%= af.radio_button :current_pets_fixed, true, :class => "required"%>
          <span>Yes</span>
        </label>
        <label class="radio">
          <%= af.radio_button :current_pets_fixed, false %>
          <span>No</span>
        </label>
      </div>
    </div>
    <div class="control-group">
      <%= af.label :why_not_fixed, "If no, please explain why.", :class => "control-label" %>
      <div class="controls">
        <%= af.text_area :why_not_fixed, :class => "input-xxlarge", :rows => "3"%>
      </div>
    </div>
    <div class="control-group">
      <%= af.label :current_pets_uptodate, "Are all your pets up to date on routine vaccines?", :class => "control-label"  %>
      <div class="controls">
        <label class="radio">
          <%= af.radio_button :current_pets_uptodate, true, :class => "required" %>
          <span>Yes</span>
        </label>

        <label class="radio">
          <%= af.radio_button :current_pets_uptodate, false %>
          <span>No</span>
        </label>
      </div>
    </div>
    <div class="control-group">
      <%= af.label :current_pets_uptodate_why, "If no, please explain why.", :class => "control-label" %>
      <div class="controls">
        <%= af.text_area :current_pets_uptodate_why, :class => "input-xxlarge", :rows => "3" %>
      </div>
    </div>

    <h5>Please provide the name and phone number of a veterinarian who has seen these pets.</h5>

    <div class="control-group">
      <%= af.label :vet_info, "Veterinarian Name and Phone Number", :class => "control-label" %>
      <div class="controls">
        <%= af.text_area :vet_info, :class => "input-xxlarge", :rows => "3" %>
        <span class="help-inline">Failure to include your Vet's Phone Number will delay your application</span>
      </div>
    </div>
    <p><span class="label label-important">Important</span> Call your vet and give permission to release your pet records to Operation Paws for Homes.</p>
</div>
