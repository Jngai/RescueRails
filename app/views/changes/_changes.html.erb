    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#comment_table" data-toggle="tab">Comments</a>
        </li>
        <li>
          <a href="#history_table" data-toggle="tab">History</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane" id="all_table">
          <p>Display all items here somehow?</p>
        </div>
        <div class="tab-pane active" id="comment_table">
          <% parent.comments.each do |comment| %>
            <% if comment.id != nil %>
              <%= render 'comments/comment', :comment => comment %>
            <% end %>
          <% end %>
        </div>
        <div class="tab-pane" id="history_table">
          <% if parent.audits.count > 0 %>
            <% parent.audits.reverse_each do |audit| %>
              <%= render 'audits/audit', :audit => audit %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
