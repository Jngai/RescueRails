<h1><%= @title %></h1>

<% if is_admin? %>
  <p>
  <%= link_to "New Folder", new_folder_path, class: "btn btn-primary" %>
  </p>
<% end %>

<%= form_tag folders_path, :method => 'get', :class => 'form-inline' do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search by file name' %>
  <%= submit_tag "Search", :name => nil %>
<% end %>


<% if !@folders.nil? %>
  <%= render 'folder_table' %>
<% elsif params[:search] %>
  <%= render 'folder_table' %>
<% else %>
  <span>No Folders Added Yet</span>
<% end %>
