<div class="row title_row">
   <%# large-format (>=md) 8/12 width, small format (<md) full-width %>
   <div class="col-12 col-md-8">
    <h1>Dog Manager</h1>
  </div>
    <% if can_add_dogs? %>
    <%# large-format (>=md) 2/12 width, small format (<md) half-width %>
    <div class="col-6 col-md-2">
      <%= link_to "Add a Dog", new_dog_path, :class => "btn btn-primary" %>
    </div>
    <% end %>
    <%# large-format (>=md) 2/12 width, small format (<md) half-width %>
    <div class="col-6 col-md-2">
      <%= link_to("Gallery View", dogs_path, class: "btn btn-sm") %>
    </div>
</div>

<%= render 'manager' %>
