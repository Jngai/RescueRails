<div class='row dog line-1'>
  <div class='col-3'>
    <span class='name'><%= link_to dog.name.titleize, dog %>:</span>
  </div>
  <div class='col'>
    <span><%= size_abbrev(dog.size) %>,</span>
    <span class='age'><%= dog.age ? dog.age.titleize : " " %>,</span>
    <span class='breed'><%= dog.breeds.join(" x ").html_safe %>,</span>
    <span class='status'>
      <% if (params[:status] == nil) || (params[:status] == "active")  %>
        <%= dog.status.titleize %>
      <% end %>
    </span >
  </div>
</div>
<div class='row dog line-2'>
  <div class='col-1 intake_date'><%= dog.intake_dt.strftime("%m/%d/%y") unless dog.intake_dt.blank? %></div>
  <div class='col-2 flags'>
    <div class="<%= 'fa fa-lg fa-exclamation-circle' unless dog.medical_review_complete %>" 'data-toggle'='tooltip' 'data-placement'='bottom' title='Medical Review Incomplete'></div>
    <div class="<%= 'fa fa-lg fa-ambulance' if dog.has_medical_need %>" 'data-toggle'='tooltip' 'data-placement'='bottom' title='Medical Need'></div>
    <div class="<%= 'is_high_priority' if dog.is_high_priority %>" 'data-toggle'='tooltip' 'data-placement'='bottom' title='High Priority'></div>
    <div class="<%= 'fa fa-lg fa-camera' if dog.needs_photos %>" 'data-toggle'='tooltip' 'data-placement'='bottom' title='Need Photos'></div>
    <div class="<%= 'has_behavior_problem' if dog.has_behavior_problem %>" 'data-toggle'='tooltip' 'data-placement'='bottom' title='Behavior Problem'></div>
    <div class="<%= 'needs_foster' if dog.needs_foster %>" 'data-toggle'='tooltip' 'data-placement'='bottom' title='Needs Foster'></div>
    <div class="<%= 'fa fa-lg fa-scissors' unless dog.is_altered %>" 'data-toggle'='tooltip' 'data-placement'='bottom' title='Needs Spay/Neuter'></div>
  </div>
  <div class='col-1'>
    Adoption<br />
    Coordinator:
  </div>
  <div class='col-1'>
    <%= dog.coordinator ? link_to(dog.coordinator.name, dog.coordinator) : "Unassigned" %>
  </div>
  <div class='col-1 foster_txt'>Foster:</div>
  <div class='col-2'><%= dog.foster ? link_to(dog.foster.name, dog.foster) : "Unassigned" %><br />
    <%= dog.foster_location %></div>
  <div class='col-1'>
    Adopter<br/>interest:
  </div>
  <div class='col-2'>
    <%- if dog.adopters.empty? %>
      None
    <%- else %>
      <% dog.adopters.each do |d| %>
        <%= link_to d.name, d %>
        <br/>
        (<%= d.status %>)
        <br/>
      <% end %>
    <%- end %>
  </div>
  <div class='col-1'>
    <span class="<%= 'fa fa-lg fa-comment-o' unless dog.comments.empty? %>"
          data-toggle='modal'
          data-target='#comments_modal'
          data-comment="<%= dog.comments.first.content %>"
          data-dog_name="<%= dog.name %>" 
          data-toggle='tooltip'
          data-placement='bottom'
          title='Click to view comments' ></span>
  </div>
</div>

