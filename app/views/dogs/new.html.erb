<h1><%= @title %></h1>

<%= form_for(@dog) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :tracking_id, "OPH Tracking ID" %><br />
		<%= f.text_field :tracking_id %>
	</div>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :status %><br />
		<%= select(:f,:status, Dog::STATUSES, :prompt => '-select-') %>
	</div>
	<div class="field">
		<%= f.label :primary_breed_id %><br />
		<%= f.text_field :primary_breed_id %>	
	</div>
	<div class="field">
		<%= f.label :secondary_breed_id %><br />
		<%= f.text_field :secondary_breed_id %>	
	</div>
	<div class="field">
		<%= f.label :age %><br />
		<%= select(:f,:age, Dog::AGES, :prompt => '-select-') %>	
	</div>
	<div class="field">
		<%= f.label :size, "Size when grown" %><br />
		<%= select(:f,:size, Dog::SIZES, :prompt => '-select-') %>	
	</div>	
	<br />
	<h3>Details</h3>
	<div class="field">
		<%= f.check_box :is_mix %>
		<%= f.label :is_mix %>
	</div>	
	<div class="field">
		<%= f.check_box :is_altered %>
		<%= f.label :is_altered %>
	</div>
	<div class="field">
		<%= f.check_box :is_special_needs %>
		<%= f.label :is_special_needs %>
	</div>
	<div class="field">
		<%= f.check_box :no_dogs %>
		<%= f.label :no_dogs %>
	</div>
	<div class="field">
		<%= f.check_box :no_cats %>
		<%= f.label :no_cats %>
	</div>
	<div class="field">
		<%= f.check_box :no_kids %>
		<%= f.label :no_kids %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>	
	</div>

	<div class "actions">
		<%= f.submit "Add Dog" %>
	</div>
<% end %>