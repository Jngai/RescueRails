<div class='container'>
  <div class="row title_row">
    <div class='col'>
      <h1>#<%=@dog.tracking_id%> <%= @dog.name %>:</h1>
      <span><%= @dog.size.titleize %>-size,</span>
      <span><%= @dog.gender %>,</span>
      <span class='age'><%= @dog.age ? @dog.age.titleize : " " %></span>
      <span class='breed'><%= @dog.breeds.join(" x ").html_safe %></span>,
      <span class='status'><%= @dog.status.titleize %></span >
      <a tabindex="0" class='fa fa-sm fa-info text-primary' data-trigger='focus' data-toggle='popover' data-placement='left' data-content="<%=t ".status_definitions.#{@dog.status_key}" %>"></a>
    </div>
  </div>
  <div class="row profile line-1">
    <%= some_details %>
  </div>

  <div class="row">
    <div class="col-8">
      <div id="galleria"></div>

      <div class="fb-like" data-href="<%= request.url %>" data-layout="standard" data-action="like" data-show-faces="false" data-share="true"></div>

      <div id="dogDescription" class="well">
        <p> <%= simple_format(@dog.description) %></p>
      </div>

      <div class="row">
        <div class="span8 centered">
          <% if @dog.is_accepting_applications?  %>
            <%= link_to "Apply To Adopt", new_adopter_path(dog_name: @dog.name), class: 'btn btn-primary btn-large' %>
          <% end %>
          <a href="/guide" class="btn btn-primary btn-large">Adoption Guide</a>
        </div>
      </div>

      <%= render_if active_user?, partial: 'medical_summary' %>
    </div>

    <div class="col-4">
      <h3>About <%= @dog.name.titleize %></h3>

      <% if @dog.foster_location %>
        <h5>Fostered in <%= @dog.foster_location %></h5>
      <% end %>
      <br />

      <% if @dog.is_accepting_applications?  %>
        <%= link_to "Adopt Me!", new_adopter_path(dog_name: @dog.name), class: 'btn btn-primary btn-large' %>
      <% end %>

      <% if can_edit_dogs? || fostering_dog? %>
        <%= link_to "Edit Dog", edit_dog_path(@dog), :class => "btn btn-primary btn-large" %>
      <% end %>

      <br />
      <br />

      <a href="/sponsor"><%= image_tag "paypal-sponsor-button.png" %></a>

      <br />
      <%= render_if active_user?, partial: 'private_information' %>
    </div>
  </div>
</div>


<script>
  $('#galleria').galleria({
    responsive: true,
    imageCrop: false,
    dataSource: <%= @carousel %>
  });

  $(function () {
    $('[data-toggle="popover"]').popover()
  })

  $('.popover-dismiss').popover({
    trigger: 'focus'
  })
</script>
