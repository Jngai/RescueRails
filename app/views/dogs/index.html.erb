<div class="row">
	<div class="span4">
		<h1><%= @title %></h1>
	</div>
	<div class="span4 offset4">
	<% if can_edit_dogs? %>
			<%= link_to "Add a Dog", new_dog_path, :class => "btn btn-primary" %>
			<% if session[:mgr_view] == true %>
			<%= link_to("Gallery View", {:controller => 'dogs', :action => 'switch_view'},:class => "btn ") %>
			<% else %>
			<%= link_to("Manager View", {:controller => 'dogs', :action => 'switch_view'},:class => "btn ") %>
			<% end %>
	<% end %>
</div>
</div>
<%= will_paginate @dogs %>

<div class="row">
	<div class="span12">
		<% if can_edit_dogs? && session[:mgr_view] == true %>
			<%= render 'manager' %>
		<% else %>
			<% @dogs.each_slice(3) do |slice| %>
				<div class="row">
					<div class="span12 gallery">
						<ul class="thumbnails">
							<% slice.each do |dog| %>
					 			 <li class="span4">
									<%= link_to dog, :class => "thumbnail" do %>
					    			  	<% if dog.photos == [] %>
											<%= image_tag("no_photo-320x320.png", :alt => dog.name) %>
										<% else %>
											<%= image_tag(dog.photos.first.photo.url(:medium), :alt => dog.name)  %> 
										<% end %>
										<h4><%= dog.name %></h4>
										<p>
											<%= dog.primary_breed.name unless !dog.primary_breed %><br/>
											<%= dog.secondary_breed.name unless !dog.secondary_breed %>
										</p>
									<% end %>
								</li>
							<% end %>
						</ul>
					</div>
				</div>
			<% end %>
		<% end %>
		<%= will_paginate @dogs %>
	</div>
</div>