<h1>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post do %>
	<div class="clearfix">
		<%= label :email, "Email Address" %>
		<div class="input">
			<%= text_field_tag :email, params[:email] %>
		</div>
	</div>
	<div class="actions">
	<%= submit_tag "Reset Password", :class => "btn primary" %></div>
<% end %>
