<div class="row">
	<div class="span12 offset2">

		<%= form_for @event, :html=> { :multipart => true } do |f| %>
			<%= render 'shared/error_messages', :object => f.object %>

			<div class="clearfix">
				<%= f.label :title %>
				<div class="input">
					<%= f.text_field :title %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :event_date, "Date" %>
				<div class="input">
					<%= f.text_field :event_date, :class => "small" %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :start_time, "Start Time" %>
				<div class="input">
					<%= f.text_field :start_time, :class => "small" %>
					<span class="help-inline">(1 PM, 3:45pm, etc.)</span>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :end_time, "End Time" %>
				<div class="input">
					<%= f.text_field :end_time, :class => "small" %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :location_name, "Location Name" %>
				<div class="input">
					<%= f.text_field :location_name %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :location_name, "Location Website" %>
				<div class="input">
					<%= f.text_field :location_url %>
					<span class="help-inline">Include http://</span>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :location_name, "Location Phone" %>
				<div class="input">
					<%= f.text_field :location_phone, :class => "small" %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :address %>
				<div class="input">
					<%= f.text_field :address, :class => "xlarge" %>
				</div>
			</div>

			<div class="clearfix">
					<% if f.object.photo? %>
						<%= f.label "Delete Image" %>
						<div class="input">
							<%= link_to image_tag(f.object.photo.url(:thumb)), f.object.photo.url(:original) %>
							<%= f.check_box :photo_delete, {}, "1", "0" %>
						</div>
					<% else %>
						<%= f.label "Image" %>
						<div class="input">
							<%= f.file_field :photo %>
						</div>
					<% end %>
			</div>
			<div class="clearfix">
				<%= f.label :description %>
				<div class="input">
					<%= f.text_area :description, :class => "xlarge", :rows => "5", :value => "To be pre-approved, fill out our adoption application and be ready to take home your new dog right from the event!" %>
					<span class="help-inline">Add more description as needed.</span>
				</div>
				
			</div>

			<div class="actions">
				<%= f.submit "Submit", :class => "btn primary" %>
			</div>

		<% end %>

	</div>
</div>