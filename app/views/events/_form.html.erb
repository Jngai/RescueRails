<div class="row">
	<div class="span12 offset2">

		<%= form_for @event, :html=> { :multipart => true } do |f| %>
			<%= render 'shared/error_messages', :object => f.object %>

			<div class="clearfix">
				<%= f.label :title %>
				<div class="input">
					<%= f.text_field :title %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :start_ts, "Start Time" %>
				<div class="input">
					<%= f.text_field :start_ts %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :end_ts, "End Time" %>
				<div class="input">
					<%= f.text_field :end_ts %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :location_name %>
				<div class="input">
					<%= f.text_field :location_name %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :address %>
				<div class="input">
					<%= f.text_field :address, :class => "xlarge" %>
				</div>
			</div>

			<div class="clearfix">
				<%= f.label :description %>
				<div class="input">
					<%= f.text_area :description, :class => "xlarge", :rows => "5" %>
				</div>
			</div>

			<div class="actions">
				<%= f.submit "Submit", :class => "btn primary" %>
			</div>

		<% end %>

	</div>
</div>