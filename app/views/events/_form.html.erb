<%= form_for @event, url: @event.new_record? ? events_path : event_path(@event), :html=> { :multipart => true, :class => "container form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="form-group row">
    <%= f.label :title, nil, :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :title, :class => "form-control form-control-sm col-6" %>
  </div>

  <div class="form-group row">
    <%= f.label :event_date, "Date" , :class => 'col-form-label col-form-label-sm col-4'%>
    <%= f.text_field :event_date, :class => "form-control form-control-sm col-6" %>
  </div>

  <div class="form-group row">
    <%= f.label :start_time, "Start Time", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :start_time, :class => "form-control form-control-sm col-6" %>
    <span class="help-inline">(1 PM, 3:45pm, etc.)</span>
  </div>

  <div class="form-group row">
    <%= f.label :end_time, "End Time", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :end_time, :class => "form-control form-control-sm col-6" %>
  </div>

  <div class="form-group row">
    <%= f.label :location_name, "Location Name", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :location_name %>
  </div>

  <div class="form-group row">
    <%= f.label :location_url, "Location Website", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :location_url, :class => "form-control form-control-sm col-6" %>
    <span class="help-inline">Include http://</span>
  </div>

  <div class="form-group row">
    <%= f.label :facebook_url, "Facebook Event URL", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :facebook_url, :class => "form-control form-control-sm col-6" %>
    <span class="help-inline">Include http://</span>
  </div>

  <div class="form-group row">
    <%= f.label :photographer_name, "Photographer Name", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :photographer_name %>
  </div>

  <div class="form-group row">
    <%= f.label :photographer_url, "Photographer Website", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :photographer_url, :class => "form-control form-control-sm col-6" %>
    <span class="help-inline">Include http://</span>
  </div>

  <div class="form-group row">
    <%= f.label :location_phone, "Location Phone", :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_field :location_phone, :class => "form-control form-control-sm col-6" %>
  </div>

  <div class="form-group row">
    <%= f.label :address, nil , :class => 'col-form-label col-form-label-sm col-4'%>
    <%= f.text_field :address, :class => "form-control form-control-sm col-6" %>
  </div>

  <div class="form-group row">
    <% if f.object.photo? %>
      <%= f.label "Image", class: 'col-form-label col-form-label-sm col-2' %>
      <%= link_to image_tag(f.object.photo.url(:thumb)), f.object.photo.url(:original), class: 'col-2' %>
      <div class='col-2'>
        <%= f.check_box :photo_delete, {}, "1", "0" %>
        <%= f.label "delete", for: 'event_photo_delete' %>
      </div>
    <% else %>
      <%= f.label "Image", for: 'event_photo', :class => 'col-form-label col-form-label-sm col-4'%>
      <%= f.file_field :photo %>
    <% end %>
  </div>
  <div class="form-group row">
    <%= f.label :description, nil, :class => 'col-form-label col-form-label-sm col-4' %>
    <%= f.text_area :description, :class => "form-control form-control-sm col-6", :rows => "20" %>
    <span class="help-inline">Description now supports <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">Markdown</a>!</span>
  </div>

  <div class="actions well">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>

<% end %>
