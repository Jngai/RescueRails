<div class="container">
  <div class="row">
    <div class="span1 hidden-phone hidden-tablet">
      <%= image_tag "logo.png" %>
    </div>

    <div class="span6 hidden-phone hidden-tablet">
      <h2>Operation Paws for Homes</h2>
      <h5>Virginia, Maryland, Washington DC and South Central PA</h5>
    </div>

    <div class="span7 hidden-desktop">
      <h2>Operation Paws for Homes</h2>
      <h5>Virginia, Maryland, Washington DC and South Central PA</h5>
    </div>


    <div class="span5 hidden-phone">
      <span class="pull-right">
        <a href="https://www.facebook.com/Operationpawsforhomes"><i class="fa fa-facebook-square fa-3x"></i></a>
        <a href="https://twitter.com/RescueOPH"><i class="fa fa-twitter-square fa-3x"></i></a>
        <a href="http://instagram.com/operationpawsforhomes"><i class="fa fa-instagram fa-3x"></i></a>
        <a href="https://www.youtube.com/user/RescueOPH"><i class="fa fa-youtube fa-3x"></i></a>
        &nbsp; &nbsp;
          <a href="http://greatnonprofits.org/reviews/operation-paws-for-homes/role:2/">
            <%= image_tag "gnp-2015-award.png", size: "165x83", alt: "2015 Top-rated nonprofits and charities" %>
          </a>
        </span>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <div id="ophCarousel" class="carousel slide">
        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag "hero_bg3.jpg", alt: "Operation Paws for Homes Dog Rescue Virginia, Maryland, Washington DC, York Pennsylvania" %>
            <div class="carousel-caption">
              <%= link_to "Our Dogs", dogs_path, :class => "btn btn-primary btn-large", :id => "hero-dog" %>
              <%= link_to "Apply for Adoption", new_adopter_path, :class => "btn btn-primary btn-large", :id => "hero-adopt" %>
            </div>
          </div>

     <% if Time.now.between?(("2016-01-01".to_date),("2016-02-08".to_date)) %>
         <div class="item">
            <%= image_tag "puppybowl2016.jpg", alt: "Operation Paws for Homes Dog Rescue Virginia, Maryland, Washington DC, York Pennsylvania" %>
            <div class="carousel-caption">
              <%= link_to "Join the Party", "https://www.facebook.com/events/520438464784367/", :class => "btn btn-warning btn-large", :id => "hero-dog" %>
            </div>
          </div>
      <% else  %>
          <div class="item">
            <%= image_tag "webbannerjan.jpg", alt: "Operation Paws for Homes Dog Rescue Virginia, Maryland, Washington DC, York Pennsylvania" %>
            <div class="carousel-caption">
              <%= link_to "Our Dogs", dogs_path, :class => "btn btn-primary btn-large", :id => "hero-dog" %>
              <%= link_to "Apply for Adoption", new_adopter_path, :class => "btn btn-primary btn-large", :id => "hero-adopt" %>
            </div>
          </div>
      <% end %>

      <% if Time.now.between?(("2015-12-09".to_date),("2016-04-11".to_date))%>
          <div class="item">
            <%= image_tag "fastfurriestwebbanner.jpg", alt: "Operation Paws for Homes Dog Rescue Virginia, Maryland, Washington DC, York Pennsylvania" %>
              <div class="carousel-caption">
                <%= link_to "Register", "http://www.ophfastandfurriest.com/", :class => "btn btn-warning btn-large", :id => "hero-adopt" %>
              </div>
          </div>
      <% end %>

        </div>
        <a class="left carousel-control" href="#ophCarousel" data-slide="prev">&lsaquo;</a>
        <a class="right carousel-control" href="#ophCarousel" data-slide="next">&rsaquo;</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span4 eventphoto">
      <a href="/donate"><%= image_tag "home-donate.jpg" %></a>
      <br />
      <br />
