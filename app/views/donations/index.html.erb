<h1>Donations</h1>
<br />

<div class="row">
    <div class="span12">
    <% if @donations.count > 0 %>
        <p>
            Download:
            <%= link_to "Excel", donations_path(format: "xls") %>
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Donation ID</th>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Amount</th>
                    <th>Zip Code</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                <%= render @donations %>
            </tbody>
        </table>
    <% else %>

        <h5>No Donations!</h5>

    <% end %>

    </div>
</div>
