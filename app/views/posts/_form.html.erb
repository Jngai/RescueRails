<div class="row">
  <div class="col-md-5">
    <%= form_with model: @post, multipart: true, id: "post_form", class: "needs-validation", autocomplete: 'off', novalidate: true do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <div class="form-group">
        <%= f.label :title, nil, class: 'col-form-label required' %>
        <%= f.text_field :title, class: "form-control", required: true, 'data-bootstrap41': true, maxlength: 255 %>
        <%= f.bootstrap_errors :title %>
      </div>

      <div class="form-group">
        <%= f.label :content, nil, class: 'col-form-label required' %>
        <%= f.text_area :content, class: "form-control ", :rows => "5", required:true %>
        <%= f.bootstrap_errors :content %>
      </div>

      <%= f.submit %>

    <% end %>
  </div>
</div>
